= form_for @entry do |f|
  - if @entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@entry.errors.count, "error")} prohibited this entry from being saved:"
      %ul
        - @entry.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :comment
    = f.text_field :comment
  .field
    = f.label :category
    = f.text_area :category
  .actions
    = f.submit 'Save', class: "button"
